<% if not @users.empty? %>
<table class="content_tbl">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <%  status = ""
      status = user.locked_at.nil? ? "" : "critical" %>

  <tr class="<%= cycle("", "even") %>">
    <td class="<%= status %>"><%= link_to user.full_name, user %></td>
    <td><%= user.email %></td>
    <td><%= user.role_name %></td>
    <td>
      <%= link_to "Unlock", unlock_user_path(user), :remote => true %> 
    </td>
  </tr>
<% end %>
</table>
<% else %>
	<p class="content_error">There are no locked users.</p>
<% end %>
