<% if @comment.errors.any? %>
var msg = ""
  <% @comment.errors.full_messages.each do |msg| %>
msg += "<%= msg %>";
  <% end %>
error_dialog(msg, "Write Comment Error");
<% else %>

$('.comment-list').html("<%= escape_javascript(render :partial => 'list' ) %>").hide().fadeIn();
$('.comment-list ul li:last').focus();
$('#comment-body-form').val("Write your comment here...");
<% end %>
