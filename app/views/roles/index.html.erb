<div class="grid_12">

<h2>Roles</h2>

<ul id="content_nav">

  <li><%= link_to "All Roles", "#", :id => "selected", :remote => true %></li>
  
  <li><%= link_to "Create Role", "#", :remote => true %></li>
  
</ul>
</div>

<div class="clear"></div>

<table class="content_tbl">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr class="<%= cycle("", "even")%>">
    <td><%= role.name %></td>
    <td><%= link_to 'Show', role %> | <%= link_to 'Edit', edit_role_path(role) %> | <%= link_to 'Destroy', role, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Role', new_role_path %>
