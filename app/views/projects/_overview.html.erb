<div class="info">

<p><span class="info_label">Description</span><%= @project.description %></p>

<h3>Tickets</h3>

<% if not @project.tickets.empty? %>

<p><span class="info_label">Total</span><%= @project.tickets.size %></p>

<p><span class="info_label">Open</span><%= @project.tickets.open.size %></p>

<p><span class="info_label">Resolved</span><%= @project.tickets.resolved.size %></p>

<% if not @project.tickets.critical.empty? %>

<p class="critical"><span class="info_label">Critical</span><%= @project.tickets.critical.size %></p>

<% end %>

<p><span class="info_label">Total Log Time</span><%= @project.total_log_time %></p>

<% else %>

<p>This project has no tickets yet.</p>

<% end %>
</div>
