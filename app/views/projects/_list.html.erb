<% if not @projects.empty? %>

<table class="content_tbl">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr class="<%= cycle("", "even")%>">
    <td><%= link_to project.name.truncate(30), project %></td>
    <td><%= project.description.truncate(60) %></td>
    <td><%= link_to 'Edit', edit_project_path(project), :remote => true %> |
     <%= link_to 'Delete', project, :confirm => 'Are you sure?', :method => :delete, :remote => true %></td>
  </tr>
<% end %>
</table>

<% else %>

  <p class="content_error">There are no projects yet. Create one <%= link_to "here", new_project_path, :remote => true %>.</p>

<% end %>
